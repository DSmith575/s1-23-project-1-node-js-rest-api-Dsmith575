generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Institution {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  region      String
  country     String?
  createdAt   DateTime     @default(now())
  departments Department[]
}

model Department {
  id            Int         @id @default(autoincrement())
  name          String
  institutionId Int
  createdAt     DateTime    @default(now())
  institution   Institution @relation(fields: [institutionId], references: [id])
  Course        Course[]
}

model Course {
  id           Int        @id @default(autoincrement())
  code         String
  name         String
  credits      Int
  departmentId Int
  createdAt    DateTime   @default(now())
  departments   Department @relation(fields: [departmentId], references: [id])
}

// model:     Starts definition of new model called "x"
// id:        Int, Marked as primary key "@id"
// name:      String, defines name
// instId:    Defines instId
// insti =>   Defines relationship Institution @relation(fields:[instID], ref: [id])
// ^^^^       The field:[instID] = the id created in department
// ^^^^       the ref:[id] refers to the Institution tables id as a connection
